extends layout

block content
    div.container
        div.row
            h1 Draw your strategy on real time shared with your team - 
                span=username
            input(name="switchroom", value=room)
            button(id="switchBtn", class="btn btn-primary") 
                span(class="glyphicon glyphicon-transfer")
                span Switch Room
            button(id="saveStrategy", class="btn btn-default col-md-offset-1") 
                span(class="glyphicon glyphicon-save") 
                span Save Picture
            h4 Remember to share the name of the room only to your member. 
            h4 You can save your strategy map and share it.
        div.row 
            div(class="container-canvas")
                canvas(id="paper" width="1070" height="674")
                    span Your browser needs to support canvas for this to work!
        div.row
            span Application created by Francesco Pantisano - It use socket.io 1.0 and node-cache
    div(id="cursors")
    div(id="checkboxClients")
    div(id="toolContainer")
        button(id="addAvatar", class="btn btn-primary btn-sm") Add Avatar
        a(class="btn btn-primary btn-sm",id="dragMap", title="Move the map") 
            span(class="glyphicon glyphicon-sound-stereo")
        br
        label(for="lineWidth") Pen Dimension
        select(id="lineWidth", name="lineWidth")
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
            option(value="6") 6
            option(value="7") 7
            option(value="8") 8
            option(value="9") 9
        a(class="btn btn-default btn-sm writeMap",data-color="#000000", title="Write on the map", style="background-color:#000000;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#FF0000", title="Write on the map", style="background-color:#FF0000;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#0000FF", title="Write on the map", style="background-color:#0000FF;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#ffffff", title="Write on the map", style="background-color:#ffffff;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#00FF00", title="Write on the map", style="background-color:#00FF00;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#FF00FF", title="Write on the map", style="background-color:#FF00FF;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#FFFF00", title="Write on the map", style="background-color:#FFFF00;")
            span(class="glyphicon glyphicon-pencil")
        a(class="btn btn-default btn-sm writeMap",data-color="#C0C0C0", title="Write on the map", style="background-color:#C0C0C0;")
            span(class="glyphicon glyphicon-pencil")